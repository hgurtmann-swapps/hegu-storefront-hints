{% sw_extends '@Storefront/storefront/page/product-detail/buy-widget.html.twig' %}

{% set HeGuStorefrontHintsAppConfig = config('HeGuStorefrontHints.config') %}

{% block page_product_detail_buy_form %}
    {% if HeGuStorefrontHintsAppConfig.alertProductDetail1Active and HeGuStorefrontHintsAppConfig.alertProductDetail1Position == '2' %}
        {% if HeGuStorefrontHintsAppConfig.alertProductDetail1DisplayMode == 'global' or page.product.customFields.hegu_storefront_hints_product_detail_1_active %}
            {% sw_include '@Storefront/storefront/utilities/alert.html.twig' with {
                type: HeGuStorefrontHintsAppConfig.alertProductDetail1Type,
                content: HeGuStorefrontHintsAppConfig.alertProductDetail1Message
            } %}
        {% endif %}
    {% endif %}
    {% if HeGuStorefrontHintsAppConfig.alertProductDetail2Active and HeGuStorefrontHintsAppConfig.alertProductDetail2Position == '2' %}
        {% if HeGuStorefrontHintsAppConfig.alertProductDetail2DisplayMode == 'global' or page.product.customFields.hegu_storefront_hints_product_detail_2_active %}
            {% sw_include '@Storefront/storefront/utilities/alert.html.twig' with {
                type: HeGuStorefrontHintsAppConfig.alertProductDetail2Type,
                content: HeGuStorefrontHintsAppConfig.alertProductDetail2Message
            } %}
        {% endif %}
    {% endif %}

    {{ parent() }}

    {% if HeGuStorefrontHintsAppConfig.alertProductDetail1Active and HeGuStorefrontHintsAppConfig.alertProductDetail1Position == '3' %}
        {% if HeGuStorefrontHintsAppConfig.alertProductDetail1DisplayMode == 'global' or page.product.customFields.hegu_storefront_hints_product_detail_1_active %}
            {% sw_include '@Storefront/storefront/utilities/alert.html.twig' with {
                type: HeGuStorefrontHintsAppConfig.alertProductDetail1Type,
                content: HeGuStorefrontHintsAppConfig.alertProductDetail1Message
            } %}
        {% endif %}
    {% endif %}
    {% if HeGuStorefrontHintsAppConfig.alertProductDetail2Active and HeGuStorefrontHintsAppConfig.alertProductDetail2Position == '3' %}
        {% if HeGuStorefrontHintsAppConfig.alertProductDetail2DisplayMode == 'global' or page.product.customFields.hegu_storefront_hints_product_detail_2_active %}
            {% sw_include '@Storefront/storefront/utilities/alert.html.twig' with {
                type: HeGuStorefrontHintsAppConfig.alertProductDetail2Type,
                content: HeGuStorefrontHintsAppConfig.alertProductDetail2Message
            } %}
        {% endif %}
    {% endif %}
{% endblock %}
