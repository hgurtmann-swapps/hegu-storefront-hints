{% sw_extends '@Storefront/storefront/page/product-detail/buy-widget.html.twig' %}

{% set appConfig = config('HeGuStorefrontHints.config') %}

{% block page_product_detail_buy_form %}
    {% if appConfig.alertProductDetailActive and appConfig.alertProductDetailPosition == '2' %}
        {% sw_include '@Storefront/storefront/utilities/alert.html.twig' with {
            type: appConfig.alertProductDetailType,
            content: appConfig.alertProductDetailMessage
        } %}
    {% endif %}

    {{ parent() }}

    {% if appConfig.alertProductDetailActive and appConfig.alertProductDetailPosition == '3' %}
        {% sw_include '@Storefront/storefront/utilities/alert.html.twig' with {
            type: appConfig.alertProductDetailType,
            content: appConfig.alertProductDetailMessage
        } %}
    {% endif %}
{% endblock %}
