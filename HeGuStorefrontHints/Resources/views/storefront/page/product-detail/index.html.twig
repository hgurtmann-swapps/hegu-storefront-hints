{% sw_extends '@Storefront/storefront/page/product-detail/index.html.twig' %}

{% set appConfig = config('HeGuStorefrontHints.config') %}

{% block page_product_detail_inner %}
    {% if appConfig.alertProductDetailActive and appConfig.alertProductDetailPosition == '1' %}
        {% sw_include '@Storefront/storefront/utilities/alert.html.twig' with {
            type: appConfig.alertProductDetailType,
            content: appConfig.alertProductDetailMessage
        } %}
    {% endif %}

    {{ parent() }}
{% endblock %}
